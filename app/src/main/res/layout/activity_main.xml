<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/bg"
            tools:context=".MainActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/bg">

                        <TextView
                            android:id="@+id/cgpcalculator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CGPA CALCULATOR"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="24dp"/>

                        <!-- Subject 1 -->
                        <TextView
                            android:id="@+id/sub1label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject 1"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                                <EditText
                                    android:id="@+id/sub1credits"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Credits"
                                    android:textColorHint="@color/black"
                                    android:fontFamily="serif"
                                    android:padding="12dp"
                                    android:inputType="number"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:background="@drawable/border"/>

                                <EditText
                                    android:id="@+id/sub1marks"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Marks"
                                    android:textColorHint="@color/black"
                                    android:fontFamily="serif"
                                    android:padding="12dp"
                                    android:inputType="number"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:background="@drawable/border"/>
                        </LinearLayout>

                        <!-- Subject 2 -->
                        <TextView
                            android:id="@+id/sub2label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject 2"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:paddingTop="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                                <EditText
                                    android:id="@+id/sub2credits"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Credits"
                                    android:textColorHint="@color/black"
                                    android:fontFamily="serif"
                                    android:padding="12dp"
                                    android:inputType="number"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:background="@drawable/border"/>

                                <EditText
                                    android:id="@+id/sub2marks"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Marks"
                                    android:textColorHint="@color/black"
                                    android:fontFamily="serif"
                                    android:padding="12dp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"/>
                        </LinearLayout>

                        <!-- Subject 3 -->
                        <TextView
                            android:id="@+id/sub3label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject 3"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:paddingTop="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                                <EditText
                                    android:id="@+id/sub3credits"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Credits"
                                    android:textColorHint="@color/black"
                                    android:fontFamily="serif"
                                    android:padding="12dp"
                                    android:inputType="number"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:background="@drawable/border"/>

                                <EditText
                                    android:id="@+id/sub3marks"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Marks"
                                    android:textColorHint="@color/black"
                                    android:fontFamily="serif"
                                    android:padding="12dp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"/>
                        </LinearLayout>

                        <!-- Subject 4 -->
                        <TextView
                            android:id="@+id/sub4label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject 4"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:paddingTop="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                                <EditText
                                    android:id="@+id/sub4credits"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Credits"
                                    android:textColorHint="@color/black"
                                    android:fontFamily="serif"
                                    android:padding="12dp"
                                    android:inputType="number"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:background="@drawable/border"/>

                                <EditText
                                    android:id="@+id/sub4marks"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Marks"
                                    android:textColorHint="@color/black"
                                    android:fontFamily="serif"
                                    android:padding="12dp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"/>
                        </LinearLayout>

                        <!-- Subject 5 -->
                        <TextView
                            android:id="@+id/sub5label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject 5"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:paddingTop="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                                <EditText
                                    android:id="@+id/sub5credits"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Credits"
                                    android:textColorHint="@color/black"
                                    android:fontFamily="serif"
                                    android:padding="12dp"
                                    android:background="@drawable/border"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:inputType="number"/>

                                <EditText
                                    android:id="@+id/sub5marks"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Marks"
                                    android:textColorHint="@color/black"
                                    android:fontFamily="serif"
                                    android:padding="12dp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:background="@drawable/border"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/outbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calculate CGPA"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:background="@drawable/newborder"
                            android:padding="15dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="24dp"/>

                        <TextView
                            android:id="@+id/outputCGPA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="Your CGPA will appear here"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="24dp"/>
                </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

